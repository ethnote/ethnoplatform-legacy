// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // @db.Text
  access_token      String? // @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                         String                      @id @default(cuid())
  createdAt                  DateTime                    @default(now())
  fullName                   String?
  email                      String?                     @unique
  emailVerified              DateTime?
  image                      String?
  accounts                   Account[]
  sessions                   Session[]
  projectMemberships         ProjectMembership[]         @relation("member")
  notes                      Note[]                      @relation("author")
  noteFields                 NoteField[]
  namePromptedAt             DateTime?
  comments                   Comment[]
  notifications              Notification[]
  notificationsRead          DateTime?
  invitationSent             ProjectMembership[]         @relation("sent-by")
  timestampShortcutCode      String?
  personalNotes              String?                     @default("[]")
  superAdmin                 SuperAdmin[]
  projectTransferInvitations ProjectTransferInvitation[]
  noteLocks                  Note[]                      @relation("locked by")
  didSeeWalkthrough          Boolean                     @default(false)
  avatarHue                  Int?
  templateLocks              Project[]                   @relation("template locked by")
}

model Otp {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  email        String?   @unique
  otp          Int?
  otpExpiresAt DateTime?
  otpAttempts  Int       @default(0)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id                     String              @id @default(cuid())
  name                   String
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
  projectMemberships     ProjectMembership[]
  description            String?
  handle                 String?
  template               Json                @default("{}")
  templateVersion        Int                 @default(0)
  accessibilityLevel     AccessibilityLevel  @default(ALL_MEMBERS_ALL_NOTES)
  notes                  Note[]
  notifications          Notification[]
  timeFormat             TimeFormat          @default(TWENTY_FOUR_HOUR)
  textEditorHighlights   Json[]              @default([])
  includeInfoText        Boolean             @default(false)
  setToBeDeletedAt       DateTime?
  noteNameTemplate       String?             @default("default1")
  templateLockId         String?
  templateLockedByUser   User?               @relation("template locked by", fields: [templateLockedByUserId], references: [id])
  templateLockedByUserId String?
  templateLockedAt       DateTime?

  @@unique([handle, id])
  @@index([handle], name: "project_handle")
}

enum AccessibilityLevel {
  ALL_MEMBERS_ALL_NOTES
  ONLY_NOTE_OWNER_AND_PROJECT_OWNER
  ONLY_NOTE_OWNER_UNTIL_RELEASED_TO_ALL
  ONLY_NOTE_OWNER_UNTIL_RELEASED_TO_PROJECT_OWNER
}

enum TimeFormat {
  TWELVE_HOUR
  TWENTY_FOUR_HOUR
}

model ProjectMembership {
  id                   String         @id @default(cuid())
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  user                 User?          @relation("member", fields: [userId], references: [id], onDelete: Cascade)
  userId               String?
  project              Project?       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId            String
  projectRole          ProjectRole    @default(MEMBER)
  invitationSentAt     DateTime?
  invitationAcceptedAt DateTime?
  invitationMailSentTo String?
  invitationSentBy     User?          @relation("sent-by", fields: [invitationSentById], references: [id])
  invitationSentById   String?
  notifications        Notification[]
}

enum ProjectRole {
  MEMBER
  PROJECT_OWNER
}

model Note {
  id              String          @id @default(cuid())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  title           String
  templateVersion Int?
  templateName    String?
  project         Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId       String
  author          User?           @relation("author", fields: [authorId], references: [id], onDelete: SetNull)
  authorId        String?
  handle          String?
  isVisible       Boolean? // Can still be visible if project visibility does not require it set by the note owner
  metadataFields  MetadataField[]
  noteFields      NoteField[]
  files           File[]
  comments        Comment[]
  notifications   Notification[]
  lockId          String?
  lockedByUserId  String?
  lockedByUser    User?           @relation("locked by", fields: [lockedByUserId], references: [id])
  lockedAt        DateTime?

  @@unique([handle, id])
  @@index([handle], name: "note_handle")
}

model MetadataField {
  id              String               @id @default(cuid())
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  variant         MetadataFieldVariant
  metadataFieldId String?
  name            String
  value           String?
  order           Int
  note            Note?                @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId          String
}

enum MetadataFieldVariant {
  SINGLE_LINE
  MULTILINE
  LOCATION
  DATE
  TIME
  DATETIME
  TAGS
  SHARED_TAGS
  NOTE
  INFO_TEXT
}

model NoteField {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  noteFieldId String?
  name        String
  content     Json     @default("[]")
  prevContent Json?    @default("[]")
  order       Int
  note        Note?    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId      String
  isLatest    Boolean  @default(true)
  author      User?    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String?
  hashtags    String[] @default([])
  mentions    String[] @default([])
  instruction String?
}

model File {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String
  fileIsUploaded Boolean?
  resizedKey     String? // If the file is an image, this is the key of the resized image (width of 640px)
  blurhash       String?
  size           Int
  mimeType       String
  caption        String?
  duration       Int?
  note           Note?    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId         String
}

model Comment {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  content       String
  isEdited      Boolean        @default(false)
  note          Note?          @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId        String
  author        User?          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId      String?
  isReplyToId   String?
  notifications Notification[]
  contentJson   Json           @default("[]")
}

model Notification {
  id                  String             @id @default(cuid())
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String
  project             Project?           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId           String?
  note                Note?              @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId              String?
  comment             Comment?           @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId           String?
  type                NotificationType
  title               String?
  message             String?
  projectMembership   ProjectMembership? @relation(fields: [projectMembershipId], references: [id], onDelete: Cascade)
  projectMembershipId String?
}

enum NotificationType {
  ProjectInvitation
  NoteComment
  NoteCommentReply
  NoteCommentMention
  ProjectDeleteWarning
}

model SuperAdmin {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProjectTransferInvitation {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  fromUserId String
  fromUser   User     @relation(fields: [fromUserId], references: [id], onDelete: Cascade)
  toEmail    String
}

model AccessRequest {
  id                   String   @id @default(cuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  email                String
  fullName             String
  nameOfInitialProject String?
  institution          String?
  intendedUse          String?
  isAccepted           Boolean  @default(false)
}

model SuperAdminKeyOtp {
  id                String    @id @default(cuid())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  superAdmninUserId String    @unique
  otp               String?
  otpExpiresAt      DateTime?
  otpAttempts       Int       @default(0)
}
